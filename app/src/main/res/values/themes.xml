<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ModulDosFirebaseCDI" parent="Theme.ModulDosFirebaseCDI.base">

    </style>
    <!-- Base application theme. -->
    <style name="Theme.ModulDosFirebaseCDI.base" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_light</item>
        <item name="colorPrimaryVariant">@color/lighter_light</item>
        <item name="colorOnPrimary">@color/base_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_grey</item>
        <item name="colorSecondaryVariant">@color/lighter_grey</item>
        <item name="colorOnSecondary">@color/base_light</item>
        <!-- Surface color. -->
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">?attr/colorOnSecondary</item>
        <!-- Background app. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/base_grey</item>

        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ModulDosFirebaseCDI.Toolbar</item>
        <!-- Shadow setup. -->
        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>

    </style>
    
    <style name="ModulDosFirebaseCDI.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/base_grey</item>
        <item name="elevation">@dimen/shadow_elevation</item>
    </style>
</resources>