<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ModulDosFirebaseCDI" parent="Theme.ModulDosFirebaseCDI.base">

    </style>
    <!-- Base application theme. -->
    <style name="Theme.ModulDosFirebaseCDI.base" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_light</item>
        <item name="colorPrimaryVariant">@color/lighter_light</item>
        <item name="colorOnPrimary">@color/base_grey</item>
        <item name="android:textColorPrimary"> @color/base_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_grey</item>
        <item name="colorSecondaryVariant">@color/lighter_grey</item>
        <item name="colorOnSecondary">@color/base_light</item>
        <item name="android:textColorSecondary">@color/debug_color</item>
        <!-- Surface color. -->
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">@color/clear_color</item>
        <!-- Background app. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/base_grey</item>

        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ModulDosFirebaseCDI.Toolbar</item>
        <item name="bottomNavigationStyle">@style/ModulDosFirebaseCDI.BottomBar</item>
        <item name="materialCardViewStyle">@style/ModulDosFirebaseCDI.CardView</item>
        <item name="textInputStyle">@style/ModulDosFirebaseCDI.Input</item>
        <item name="materialButtonStyle">@style/ModulDosFirebaseCDI.Button</item>
        <item name="extendedFloatingActionButtonStyle">@style/ModulDosFirebaseCDI.FloatingButtonExtended</item>
        <!-- Shadow setup. -->
        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>

    </style>
    
    <style name="ModulDosFirebaseCDI.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/base_grey</item>
        <item name="elevation">@dimen/shadow_elevation</item>
    </style>
    <style name="ModulDosFirebaseCDI.BottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/base_grey</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
        <item name="itemIconTint">@color/selectables_buttons_color</item>
        <item name="rippleColor">@color/base_light_alpha_low</item>
    </style>
    <style name="ModulDosFirebaseCDI.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/shadow_elevation</item>
    </style>
    <style name="ModulDosFirebaseCDI.Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/tiny</item>
        <item name="boxStrokeWidthFocused">@dimen/tiny</item>
        <item name="boxStrokeErrorColor">@color/base_red</item>
        <item name="android:textColorHint">@color/base_light</item>
        <item name="hintTextColor">@color/lighter_light</item>
    </style>
    <style name="ModulDosFirebaseCDI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/base_light</item>
        <item name="backgroundTint">@color/base_grey</item>
        <item name="rippleColor">@color/darkest_light</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
    </style>
    <style name="ModulDosFirebaseCDI.Button.NoShadow" parent="ModulDosFirebaseCDI.Button">
        <item name="android:elevation">0dp</item>
    </style>
    <style name="ModulDosFirebaseCDI.FloatingButtonExtended" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="elevation">0dp</item>
    </style>

</resources>